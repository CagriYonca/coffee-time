<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_on_lib"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/lib_book_image"
        android:scaleType="centerCrop"
        android:src="@drawable/bhayvanciftligi"
        />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:alpha="0.4">
    </TableRow>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/lib_book_name"
        android:textSize="22dp"
        android:text="Book Name"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/lib_book_name"
        android:id="@+id/lib_author_name"
        android:textSize="16dp"
        android:text="Author"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/lib_author_name"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:id="@+id/lib_release_year"
        android:text="Year"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        />

</RelativeLayout>